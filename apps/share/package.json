{
	"name": "@cdb/share",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"db:push": "drizzle-kit push",
		"db:migrate": "wrangler d1 migrations apply cdb-is --local --persist-to=../../.wrangler/state",
		"db:generate": "drizzle-kit generate",
		"db:exec": "wrangler d1 execute cdb-is --local --command",
		"db:studio": "LOCAL_DB_PATH=$(find ../../.wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit studio",
		"debug": "NODE_OPTIONS=\"--inspect-wait=9230\" vite dev",
		"format": "prettier --write .",
		"types": "wrangler types ./src/worker-configuration.d.ts -c ./wrangler.jsonc -c ../../services/auth/wrangler.jsonc",
		"lint": "prettier --check . && eslint ."
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.0",
		"@eslint/js": "^9.38.0",
		"@fontsource-variable/noto-sans": "^5.2.10",
		"@fontsource-variable/noto-sans-mono": "^5.2.10",
		"@fontsource-variable/noto-serif": "^5.2.9",
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"@sveltejs/kit": "^2.47.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/node": "^24.10.1",
		"drizzle-kit": "^0.31.7",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.4.0",
		"postcss-html": "^1.8.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"stylelint": "^16.25.0",
		"stylelint-config-css-modules": "^4.5.1",
		"stylelint-config-idiomatic-order": "^10.0.0",
		"stylelint-config-recommended": "^17.0.0",
		"stylelint-order": "^7.0.0",
		"svelte": "^5.43.12",
		"svelte-check": "^4.3.3",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.47.0",
		"vite": "^7.1.10",
		"vite-plugin-devtools-json": "^1.0.0"
	},
	"dependencies": {
		"@cdb/auth": "workspace:*",
		"@cdb/id": "workspace:*",
		"@cdb/jwt": "workspace:*",
		"drizzle-orm": "^0.44.7",
		"modern-normalize": "^3.0.1",
		"valibot": "^1.1.0"
	}
}
