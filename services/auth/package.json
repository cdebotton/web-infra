{
	"name": "@cdb/auth",
	"version": "0.0.0",
	"private": true,
	"main": "src/index.ts",
	"scripts": {
		"deploy": "wrangler deploy",
		"dev": "wrangler dev --name=auth --persist-to=../../.wrangler/state",
		"debug": "pnpm dev",
		"start": "wrangler dev",
		"test": "vitest",
		"cf-typegen": "wrangler types",
		"secret:put": "wrangler secrets-store secret create be063ad20bfb49e2ab8a0e1da2bc6921 --persist-to=../../.wrangler/state",
		"db:push": "drizzle-kit push",
		"db:migrate": "wrangler d1 migrations apply auth --local --persist-to=../../.wrangler/state",
		"db:generate": "drizzle-kit generate",
		"db:exec": "wrangler d1 execute cdb-is --local --command",
		"db:studio": "LOCAL_DB_PATH=$(find ../../.wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit studio"
	},
	"devDependencies": {
		"@cloudflare/vitest-pool-workers": "^0.10.8",
		"@libsql/client": "^0.15.15",
		"@types/node": "^24.10.1",
		"drizzle-kit": "^0.31.7",
		"typescript": "^5.5.2",
		"vitest": "~4.0.10",
		"wrangler": "^4.49.0"
	},
	"dependencies": {
		"@cdb/jwt": "workspace:*",
		"drizzle-orm": "^0.44.7",
		"valibot": "^1.1.0"
	}
}
